<script>
    function passwordFormSubmit(){
        var hold = $('#password-form').serialize();

            $.ajax({
                url: '@Url.Action("ChangePassword", "Account")',
                type: 'post',
                data: hold,
                success: function (result) {
                    $('.password-text-success').text(result.message);
                }
            });
        }
</script>