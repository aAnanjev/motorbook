            </div>
        </div>*@
    </div>
</div>

<script>
    $('.accordion-item h3').click(function () {
        $(this).siblings(".accordion-content").slideToggle("slow");
        if ($(this).parent().siblings(".accordion-item").find(".accordion-content").is(":visible")) {
            $(this).parent().siblings(".accordion-item").find(".accordion-content").slideUp("slow");
        }
    });
</script>